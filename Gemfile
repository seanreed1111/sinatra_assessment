source "https://rubygems.org"

gem "sinatra"

group :development do #only needed for development builds
    gem "shotgun" #no need to restart the console after you make changes

    gem "tux" #allows us to have a console to intereact with data
end


#do 'bundle install' from the location that we have the GEMFILE installed
#the GEMFILE has every single gem that is needed to run the program
    